# Configuración de Digital Ocean Spaces para almacenamiento de documentos
# Obtener estas credenciales desde el panel de Digital Ocean

# Access Key ID de Digital Ocean Spaces
DO_SPACES_ACCESS_KEY_ID=your_access_key_here

# Secret Access Key de Digital Ocean Spaces  
DO_SPACES_SECRET_ACCESS_KEY=your_secret_key_here

# Nombre del Space (bucket) en Digital Ocean
DO_SPACES_BUCKET_NAME=neuraudit-colombia

# URL del endpoint de tu región
# Ejemplos:
# - NYC3: https://nyc3.digitaloceanspaces.com
# - FRA1: https://fra1.digitaloceanspaces.com
# - SGP1: https://sgp1.digitaloceanspaces.com
DO_SPACES_ENDPOINT_URL=https://nyc3.digitaloceanspaces.com

# Región del Space
DO_SPACES_REGION=nyc3

# Configuración de la base de datos MongoDB
MONGO_DB_NAME=neuraudit_colombia_db

# Configuración de Django
SECRET_KEY=your-secret-key-here
DEBUG=False

# Configuración de Email (para notificaciones)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=neuraudit@epsfamiliar.com.co